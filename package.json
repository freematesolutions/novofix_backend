{
  "name": "marketplace-services-backend",
  "version": "1.0.0",
  "description": "Backend for residential services marketplace with MERN stack",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "vitest run -c vitest.config.js",
    "seed:admin": "node src/scripts/seedAdmin.js",
    "seed:plans": "node src/scripts/seedSubscriptionPlans.js",
    "migrate:clients": "node src/scripts/migrateClientsToProviders.js --all",
    "render-build": "npm install"
  },
  "keywords": [
    "marketplace",
    "services",
    "plumbing",
    "electrical",
    "cleaning",
    "repair"
  ],
  "author": "Marketplace Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "browser-image-compression": "^2.0.2",
    "cloudinary": "^1.40.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.3",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "redis": "^4.6.7",
    "resend": "^2.0.0",
    "socket.io": "^4.7.2",
    "stripe": "^13.3.0",
    "uuid": "^9.0.0",
    "xss-clean": "^0.1.4"
